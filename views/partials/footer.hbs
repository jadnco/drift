{{#if slideshow}}
  <aside id="side-panel">
    <ul id="slide-thumbs">
      {{#each slideshow.slides}}
        <li onclick="toSlide({{location}})">{{location}}</li>
      {{/each}}
    </ul>
  </aside>

  <button onclick="showSide()" style="position:fixed;z-index:999;right: 100px;top:100px;">Show side</button>
{{/if}}

<script src="assets/scripts/bundle.js"></script>

{{#if slideshow}}
  <script>listen();</script>

  <div>{{slideshow.position}}</div>

  <script>
  var showSide = function() {
    var panel = document.getElementById('side-panel');

    panel.className += ' visible';
  };
  </script>
{{/if}}

</body>
</html>